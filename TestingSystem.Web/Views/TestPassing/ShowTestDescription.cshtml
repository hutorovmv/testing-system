@model TestingSystem.Web.Areas.Admin.Data.TestEditModel

@{ 
    ViewBag.Title = "Test Description";
}

<div id="data" class="card col-7 p-4 bg-white rounded m-auto border-0 shadow-sm text-center">
    <h2 class="text-center my-4">@Model.Name</h2>
    
    @if (!string.IsNullOrWhiteSpace(Model.Description) && Model.TimeRequired.HasValue)
    {
        <div class="text-muted mx-4 my-auto">
            <p>
                @Model.Description
            </p>
            <div class="d-flex flex-column justify-content-between align-items-center">
                @if (Model.TimeRequired.HasValue)
                {
                    <span class="text-muted mt-1">@Model.TimeRequired.Value</span>
                }
            </div>
        </div>
    }

    @Html.ActionLink("Start", "StartTesting", "TestPassing", new { testId = Model.Id }, new { @class = "btn btn-primary mx-auto my-4" })
</div>