    UpdateTargetId = "activeUser",
    LoadingElementId = "loadingActiveUser",
    LoadingElementDuration = 200
}, new { id = "showActiveUser" })) {}

<nav class="navbar navbar-expand-lg navbar-dark bg-light 
     d-flex flex-column flex-lg-row justify-content-lg-around align-items-lg-center my-4">
    <a href="/Home/Index" class="display-4 text-decoration-none pb-4 pb-lg-0">
        <img src="@Url.Content("/Content/logo.svg")" alt="logo" class="logo" />
        <span class="text-dark ml-3">TestingSystem</span>
    </a>

    <div class="mt-4">
        <div id="activeUser">
            @Html.Preloader("loadingActiveUser")
        </div>
    </div>
