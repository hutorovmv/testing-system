@model TestingSystem.Web.Areas.User.Data.UpdateEmailModel

@using (Ajax.BeginForm("_UpdateEmail", new AjaxOptions { UpdateTargetId = "emailData" }))
{
    @*@Html.HiddenFor(model => model.UserName)*@

    <div class="form-group border-top mt-3 py-3">
        @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label mb-2" })
        <div>
            @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            <small class="form-text text-muted">@TempData["PartialMessage"]</small>
        </div>

        <button type="submit" class="btn btn-danger mt-3">Change Email</button>
    </div>
}