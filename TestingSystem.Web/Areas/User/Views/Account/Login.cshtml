@model TestingSystem.Web.Areas.User.Data.LoginModel

@{
    ViewBag.Title = "Login";
}

@using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "container" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal col-12 col-sm-10 col-md-8 col-lg-5 p-5 my-4 mx-auto bg-white rounded shadow">

        <h2 class="text-center">Login</h2>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group px-4">
            @Html.LabelFor(model => model.UserName, htmlAttributes: new { @class = "control-label mt-3 mb-2" })
            <div>
                @Html.EditorFor(model => model.UserName, new { htmlAttributes = new { @class = "form-control rounded-pill" } })
                @Html.ValidationMessageFor(model => model.UserName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group px-4">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label mb-2" })
            <div>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control rounded-pill" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="px-4 mt-4 pt-2 text-center">
                <input type="submit" value="@ViewBag.Title" class="btn btn-primary w-100 rounded-pill" />
                @Html.ActionLink("Register", "Register", null, new { @class = "btn btn-outline-info mt-2 w-100 rounded-pill mb-3" })
                @Html.ActionLink("I forgot my password", "ForgotPassword", "Email", new { area = "User" }, new { @class = "small text-muted" })
            </div>
        </div>
    </div>
}
