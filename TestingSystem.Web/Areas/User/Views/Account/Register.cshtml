@model TestingSystem.Web.Areas.User.Data.RegisterModel

@{
    ViewBag.Title = "Register";
}

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "container" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal col-12 col-sm-10 col-md-8 col-lg-5 p-5 mx-auto my-4 bg-white rounded shadow">

        <h2 class="text-center">Register</h2>
        <hr />

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group px-4">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label mt-3 mb-2" })
            <div>
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control rounded-pill" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group px-4">
            @Html.LabelFor(model => model.Password, htmlAttributes: new { @class = "control-label mb-2" })
            <div>
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control rounded-pill" } })
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group px-4">
            @Html.LabelFor(model => model.PasswordConfirm, htmlAttributes: new { @class = "control-label mb-2" })
            <div>
                @Html.EditorFor(model => model.PasswordConfirm, new { htmlAttributes = new { @class = "form-control rounded-pill" } })
                @Html.ValidationMessageFor(model => model.PasswordConfirm, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group px-4">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label mb-2" })
            <div>
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control rounded-pill" } })
                @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group px-4">
            @Html.LabelFor(model => model.LastName, htmlAttributes: new { @class = "control-label mb-2" })
            <div>
                @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control rounded-pill" } })
                @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="px-4 mt-4 pt-2">
                <input type="submit" value="@ViewBag.Title" class="btn btn-primary w-100 rounded-pill" />
                @Html.ActionLink("Login", "Login", null, new { @class = "btn btn-outline-info mt-2 w-100 rounded-pill" })
            </div>
        </div>
    </div>
}