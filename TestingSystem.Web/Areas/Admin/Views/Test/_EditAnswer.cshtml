@model TestingSystem.Web.Areas.Admin.Data.AnswerEditModel

<div id="data" class="card col-6 p-4 my-4 bg-white rounded mx-auto border-0 shadow">

    @using (Ajax.BeginForm("_EditAnswer", new AjaxOptions
    {
        HttpMethod = "Post",
        UpdateTargetId = "data",
        LoadingElementId = "loadingSettings",
        LoadingElementDuration = 200
    }))
    {
        @Html.HiddenFor(model => model.Id)
        @Html.Hidden("questionId", Model.QuestionId)

        <div class="form-group">
            @Html.LabelFor(model => model.IsCorrect, htmlAttributes: new { @class = "control-label mb-2" })
            <div>
                @Html.CheckBoxFor(model => model.IsCorrect, new { htmlAttributes = new { @class = "form-control", rows = "5" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label mb-2" })
            <div>
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control", rows = "5" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <button type="submit" class="btn btn-primary d-block mt-3 w-50 mx-auto">Save</button>
    }
</div>