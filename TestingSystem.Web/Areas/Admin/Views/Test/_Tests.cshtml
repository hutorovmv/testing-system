@model PagedList<TestingSystem.Web.Areas.Admin.Data.TestCardModel>

<div class="row my-2 py-4 d-flex justify-content-start align-items-stretch">
    @foreach (var item in Model.Items)
    {
        <div class="col-8 col-md-6 col-lg-4 p-3 mx-auto mx-md-0 d-flex flex-wrap">
            <div class="card bg-white border-0 shadow px-2 py-4 w-100 d-flex flex-column justify-content-between align-items-stretch">
                <div class="d-flex d-flex flex-column align-items-center">
                    <h4 class="h4 mt-1">@item.Name</h4>

                    @if (item.TimeRequired.HasValue)
                    {
                        <span class="text-muted mt-1">@item.TimeRequired.Value</span>
                    }
                    <span class="text-muted mt-1">@item.AuthorFullName</span>
                    <span class="text-muted mt-1">@item.DateTime</span>
                </div>
                @Html.ActionLink("Пройти test", "ShowTestDescription", "TestPassing", new { area = "", testId = item.Id }, new { @class = "btn btn-info mt-4 mx-4" })
            </div>
        </div>
    }
</div>

@Html.Partial("_Pagination", Model)