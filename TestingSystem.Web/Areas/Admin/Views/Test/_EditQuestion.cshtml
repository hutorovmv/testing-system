@model TestingSystem.Web.Areas.Admin.Data.QuestionEditModel

<div id="data" class="card col-6 p-4 my-4 bg-white rounded mx-auto border-0 shadow-sm">
    @Html.Partial("_StatusMessage")

    @using (Ajax.BeginForm("_EditQuestion", new AjaxOptions
    {
        HttpMethod = "Post",
        UpdateTargetId = "data",
        LoadingElementId = "loadingSettings",
        LoadingElementDuration = 200
    }))
    {
        @*<input type="hidden" name="questionId" value="@Model.Id" />*@
        @Html.HiddenFor(model => model.Id);
        @Html.HiddenFor(model => model.TestId);

        <div class="form-group">
            @Html.LabelFor(model => model.Text, htmlAttributes: new { @class = "control-label mb-2" })
            <div>
                @Html.EditorFor(model => model.Text, new { htmlAttributes = new { @class = "form-control", rows = "5" } })
                @Html.ValidationMessageFor(model => model.Text, "", new { @class = "text-danger" })
            </div>
        </div>

        <button type="submit" class="btn btn-primary d-block mt-3 w-50 mx-auto">Save</button>
    }
</div>